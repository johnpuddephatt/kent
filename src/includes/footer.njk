<footer class="footer" role="contentinfo">
    <div class="footer__inner container container--wide">
      <div class="footer__section footer__title">
        {{ meta.title }}
      </div>

      <div class="footer__section is-contact-menu">
        <h3 class="footer__section__heading">Contact</h3>
        <p>{{ contact.name }}</p>

        <a href="tel:{{ contact.phone_main | replace(" ","") }}">
          {% icon "speech" %} {{ contact.phone_main }}
        </a>

        <a href="tel:{{ contact.phone_mobile | replace(" ","") }}">
          {% icon "speech" %} {{ contact.phone_mobile }}
        </a>

        <a href="mailto:{{ contact.email }}">
          {% icon "envelope" %} {{ contact.email }}
        </a>
      </div>

      <div class="footer__section is-address-menu">
        <h3 class="footer__section__heading">Address</h3>
        {{ contact.address }}
      </div>

      <div class="footer__section is-logos">

        <a href="https://ruralkent.org.uk/" target="_blank">
          <img src="/assets/images/rural_kent_logo.png"/>
        </a>

        <a class="is-wide" href="https://www.communityledhomes.org.uk/" target="_blank">
          <img src="/assets/images/community_led_homes_logo.png"/>
        </a>

      </div>

    </div>
</footer>